{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://osnmalib.eu/status_log.schema.json",
  "title": "OSNMAlib Status Log",
  "description": "Format of the JSON status log generated by OSNMAlib",
  "type": "object",

  "properties": {

    "metadata": {
      "description": "General information related to the subframe",
      "type": "object",
      "properties": {
        "GST_subframe": {
          "description": "Galileo Satellite Time at the start of the reception of the subframe",
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "input_module": {
          "description": "OSNMAlib input module used to receive the navigation data",
          "type": "string"
        },
        "OSNMAlib_status": {
          "description": "Status of OSNMAlib as a library regarding the possession of cryptographic material.",
          "type": "string",
          "enum": ["COLD_START", "WARM_START", "HOT_START", "STARTED", "OSNMA_AM"]
        }
      }
    },

    "OSNMA_status": {
      "description": "Information on the last authenticated status of OSNMA",
      "type": "object",
      "nma_status": {
        "type": "object",
        "properties": {
          "nmas": {
            "description": "OSNMA status",
            "type": "string",
            "enum": ["TEST", "NOMINAL", "DONT_USE"]
          },
          "cid": {
            "description": "ID of the TESLA chain in force",
            "type": "integer"
          },
          "cpks": {
            "description": "Chain and public key status",
            "type": "string",
            "enum": ["NOMINAL", "EOC", "CREV", "NPK", "PKREV", "NMT", "AM"]
          }
        }
      },
      "tesla_chain_in_force": {
        "type": "object",
        "properties": {
          "pkid": {
            "type": "integer"
          },
          "cidkr": {
            "type": "integer"
          },
          "hf": {
            "type": "string",
            "enum": ["SHA_256", "SHA3_224", "SHA3_256"]
          },
          "mf": {
            "type": "string",
            "enum": ["HMAC_SHA_256", "CMAC_AES"]
          },
          "ks": {
            "type": "integer"
          },
          "ts": {
            "type": "integer"
          },
          "maclt": {
            "type": "integer"
          },
          "maclt_sequence": {
            "type": "array"
          }
        }
      },
      "public_key_in_force": {
        "npkid": {
          "type": "integer"
        },
        "npkt": {
          "type": "string",
          "enum": ["ECDSA_P256", "ECDSA_P521", "OAM"]
        }
      }
    },

    "OSNMA_material_received": {
      "description": "OSNMA material received from each satellite transmitting OSNMA",
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "hkroot_data": {
              "type": "object",
              "properties": {
                "nma_header": {
                  "type": "object",
                  "properties": {
                    "nmas": {
                      "description": "OSNMA status",
                      "type": "string",
                      "enum": ["TEST", "NOMINAL", "DONT_USE"]
                    },
                    "cid": {
                      "description": "ID of the TESLA chain in force",
                      "type": "integer"
                    },
                    "cpks": {
                      "description": "Chain and public key status",
                      "type": "string",
                      "enum": ["NOMINAL", "EOC", "CREV", "NPK", "PKREV", "NMT", "AM"]
                    }
                  }
                },
                "dsm_header": {
                  "type": "object",
                  "properties": {
                    "dsm_id": {
                      "type": "integer"
                    },
                    "block_id": {
                      "type": "integer"
                    }
                  }
                },
                "dsm_blocks": {
                  "type": "array",
                  "items": {
                    "type": "boolean"
                  }
                }
              }
            },
            "mack_data": {
              "type": "object",
              "properties": {
                "tesla_key": {
                  "type": "string"
                },
                "tags": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 4,
                  "prefixItems": [
                    { "type": "integer" },
                    { "type": "integer" },
                    { "type": "integer" },
                    { "type": "string" }
                  ]
                }
              }
            }
          }
        }
      }
    },

    "nav_data_received": {
      "description": "OSNMA relevant navigation data received during this subframe for the tracked satellites",
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "ADKD0": {
              "type": "object",
              "properties": {
                "1": {
                  "type": "boolean"
                },
                "2": {
                  "type": "boolean"
                },
                "3": {
                  "type": "boolean"
                },
                "4": {
                  "type": "boolean"
                },
                "5": {
                  "type": "boolean"
                }
              }
            },
            "ADKD4": {
              "type": "object",
              "properties": {
                "6": {
                  "type" : "boolean"
                },
                "10": {
                  "type" : "boolean"
                }
              }
            }
          }
        }
      }
    },

    "verified_OSNMA_material": {
      "description": ""
    }
  }
}